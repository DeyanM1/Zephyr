    pi ? w:'piMO';

    piMO # CT:PT;
    piMO ? push:;
    
    
    divisor ? w:++;
    divisor ? w:++;
    divisor ? w:++;
    divisor ? w:++;

    iteration ? w:++;


iLoop ? END:;
